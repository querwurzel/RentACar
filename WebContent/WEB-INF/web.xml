<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <display-name>RentACar</display-name>
  <welcome-file-list>
    <welcome-file>/index.xhtml</welcome-file>
  </welcome-file-list>
  <servlet>
    <servlet-name>Faces Servlet</servlet-name>
    <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>Faces Servlet</servlet-name>
    <url-pattern>*.xhtml</url-pattern>
  </servlet-mapping>
  <security-role>
    <role-name>CUSTOMER</role-name>
  </security-role>
  <security-constraint>
    <web-resource-collection>
      <web-resource-name>RentACar</web-resource-name>
      <url-pattern>/*</url-pattern>
    </web-resource-collection>
    <auth-constraint>
      <role-name>CUSTOMER</role-name>
    </auth-constraint>
    <user-data-constraint>
      <transport-guarantee>INTEGRAL</transport-guarantee>
    </user-data-constraint>
  </security-constraint>
  <security-constraint>
    <web-resource-collection>
      <web-resource-name>RentACar</web-resource-name>
      <url-pattern>/images/*</url-pattern>
      <url-pattern>/css/*</url-pattern>
      <url-pattern>/http/*</url-pattern>
      <url-pattern>/javax.faces.resource/*</url-pattern>
      <url-pattern>/register.xhtml</url-pattern>
    </web-resource-collection>
    <user-data-constraint>
      <transport-guarantee>INTEGRAL</transport-guarantee>
    </user-data-constraint>
  </security-constraint>
  <login-config>
    <auth-method>FORM</auth-method>
    <realm-name>RentACar</realm-name>
    <form-login-config>
      <form-login-page>/login.xhtml</form-login-page>
      <form-error-page>/login.failed.xhtml</form-error-page>
    </form-login-config>
  </login-config>
  <error-page>
    <error-code>500</error-code>
    <location>/http/500.xhtml</location>
  </error-page>
  <error-page>
    <error-code>404</error-code>
    <location>/http/404.xhtml</location>
  </error-page>
  <error-page>
    <error-code>403</error-code>
    <location>/http/403.xhtml</location>
  </error-page>
  <context-param>
    <param-name>com.sun.faces.preferXHTML</param-name>
    <param-value>true</param-value>
  </context-param>
</web-app>